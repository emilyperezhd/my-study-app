generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Course {
  id        String   @id @default(cuid())
  title     String
  content   String   @db.Text
  summary   String?  @db.Text
  createdAt DateTime @default(now())
  
  questions   Question[]
  quizResults QuizResult[]
  flashcards  Flashcard[]  // <--- The code needs this relation!
}

model Question {
  id        String   @id @default(cuid())
  courseId  String
  course    Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)
  question  String   @db.Text
  options   String[] 
  answer    String   
  createdAt DateTime @default(now())
}

model QuizResult {
  id        String   @id @default(cuid())
  courseId  String
  course    Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)
  score     Int
  total     Int
  createdAt DateTime @default(now())
}

model Flashcard {
  id        String   @id @default(cuid())
  courseId  String
  course    Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)
  
  front     String   @db.Text
  back      String   @db.Text
}