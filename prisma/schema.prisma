model Crossword {
  id        String   @id @default(cuid())
  courseId  String
  course    Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)
  
  puzzle    Json     // Stores the entire Grid + Clues structure
  
  createdAt DateTime @default(now())
